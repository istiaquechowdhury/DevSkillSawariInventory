
<!-- Measurement Unit Modal (Add/Edit) -->
<div class="modal fade" id="measurementModal" tabindex="-1" role="dialog" aria-labelledby="measurementModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="measurementModalLabel">Add Measurement Unit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="measurementForm">
                    <input type="hidden" id="measurementId" />

                    <!-- Name Field -->
                    <div class="form-group">
                        <label for="measurementName">Measurement Unit Name</label>
                        <input type="text" class="form-control" id="measurementName" placeholder="Enter measurement unit name" required />
                    </div>

                    <!-- Symbol Field -->
                    <div class="form-group">
                        <label for="measurementSymbol">Measurement Unit Symbol</label>
                        <input type="text" class="form-control" id="measurementSymbol" placeholder="Enter measurement unit symbol" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveMeasurementButton">Save Measurement Unit</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Measurement Unit Modal -->
<div class="modal fade" id="deleteMeasurementModal" tabindex="-1" role="dialog" aria-labelledby="deleteMeasurementModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteMeasurementModalLabel">Delete Measurement Unit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this measurement unit?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeleteButton" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
