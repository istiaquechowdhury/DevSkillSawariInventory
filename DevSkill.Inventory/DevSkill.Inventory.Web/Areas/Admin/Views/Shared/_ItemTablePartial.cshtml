@using Inventory.Domain.Entities
@model IEnumerable<Product>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Barcode</th>
            <th>Category</th>
            <th>Total Stock</th>
            <th>Status</th>
            <th>Tax</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Barcode</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.TotalWarehouseStock</td>
                    <td>@(item.Status ? "Active" : "Inactive")</td>
                    <td>@item.Taxes?.Name</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No items match the search criteria.</td>
            </tr>
        }
    </tbody>
</table>
